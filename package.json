{
  "name": "dicomics",
  "description": "DIComics is a pl provides a fast, offline-first desktop experience for organizing and reading digital comics, optimized for users with **large local collections** who want simplicity, performance, and control over their data.",
  "author": {
    "name": "Domingos Fernando",
    "email": "domingos.m.fernando@gmail.com",
    "url": "https://github.com/Domingos-Masta/DiComics.git"
  },
  "version": "1.0.2",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-dev": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron .\"",
    "electron-build": "ng build --base-href ./ && electron-builder",
    "ng:build": "ng build --configuration production",
    "electron:start": "npm run ng:build && electron ./electron/main.js",
    "dist": "npm run ng:build && electron-builder"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.16",
    "@angular/build": "^20.3.14",
    "@angular/cdk": "^20.2.14",
    "@angular/cli": "^20.3.14",
    "@angular/common": "^20.3.16",
    "@angular/compiler": "^20.3.16",
    "@angular/compiler-cli": "^20.3.16",
    "@angular/core": "^20.3.16",
    "@angular/forms": "^20.3.16",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.16",
    "@angular/platform-browser-dynamic": "^20.3.16",
    "@angular/router": "^20.3.16",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "fast-xml-parser": "^5.3.3",
    "jszip": "^3.10.1",
    "ngx-indexed-db": "^21.0.0",
    "ngx-toastr": "^19.1.0",
    "node-unrar-js": "^2.0.2",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.3.0",
    "unrar-promise": "^3.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.14",
    "@angular/cli": "^20.3.14",
    "@angular/compiler-cli": "^20.3.16",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.bdhqreader.dicomics",
    "productName": "DIComics",
    "executableName": "DIComics",
    "directories": {
      "app": ".",
      "output": "dist",
      "buildResources": "electron/build"
    },
    "fileAssociations": [
      {
        "ext": "dicm",
        "name": "DIComics Document",
        "role": "Viewer",
        "mimeType": "application/dicomics"
      },
      {
        "ext": [
          "cbr",
          "cbz"
        ],
        "name": "Comic Book Archive",
        "role": "Viewer"
      }
    ],
    "files": [
      "!dist${/*}",
      "dist/dicomics/**/*",
      "electron/**/*",
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}